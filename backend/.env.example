# Preferred single-link database configuration.
# When DATABASE_URL is set, it takes precedence over POSTGRES_* values below.
DATABASE_URL=postgresql://postgres:password@127.0.0.1:5432/postgres?sslmode=require
# For Neon/Supabase, URL-encode special password chars (e.g. @ -> %40).

POSTGRES_DB=uraccount
POSTGRES_USER=uraccount
POSTGRES_PASSWORD=uraccount
POSTGRES_HOST=127.0.0.1
POSTGRES_PORT=5432
POSTGRES_CONN_MAX_AGE=60
POSTGRES_SSLMODE=require

# Set only for local fallback/testing when PostgreSQL is unavailable.
USE_SQLITE=0
